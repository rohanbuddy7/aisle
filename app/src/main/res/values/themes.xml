<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AislePoc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="BottomNavigation.InActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="CustomMediumInter" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="CustomBoldInter" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="EdittextCustomBoldInter" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">13dp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>


</resources>